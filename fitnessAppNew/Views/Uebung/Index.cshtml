@model List<Uebung>
<div class"container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Übungen</h2>
        </div>
        <div class="col-6 text-end pb-3">
            <a asp-controller="Uebung" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Neue Übung
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped table-secondary">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Muskelgruppe
        </th>
        <th>
            Ausführung
        </th>
        <th>
            Bearbeiten
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Muskelgruppe.ToString()
                </td>
                <td>
                    @obj.Ausfuehrung
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Uebung" asp-action="Edit" asp-route-id="@obj.UebungId" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Bearbeiten
                        </a>
                        <a asp-controller="Uebung" asp-action="Delete" asp-route-id="@obj.UebungId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Löschen
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>