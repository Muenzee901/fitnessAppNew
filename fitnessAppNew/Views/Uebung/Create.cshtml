@model Uebung

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Erstelle eine neue Übung</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class"text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Ausfuehrung" ></label>
            <input asp-for="Ausfuehrung" type="text" class="form-control" />
            <span asp-validation-for="Ausfuehrung" class"text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Muskelgruppe" for="MuskelgruppeSelect" class="form-label mt-4"></label>
            <select asp-for="Muskelgruppe" class="form-select" id="MuskelgruppeSelect">
                @foreach(var name in Enum.GetNames<Muskelkategorie>())
                {
                    <option>@name</option>
                }
            </select>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Erstellen</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Uebung" asp-action="Index" class="btn btn-danger form-control">Zurück</a>
            </div>
        </div>
    </div>
</form>


@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}